{
	"makefile.configureOnOpen": true,

	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.renderWhitespace": "all",
	"editor.rulers": [80],
	"editor.wordWrap": "off",

	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.eol": "\n",

	"[c]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": false,
	},
	"[cpp]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": false
	}
}
